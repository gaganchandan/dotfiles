{
    "diagnostic.checkCurrentLine": true,
    "diagnostic.refreshOnInsertMode": true,
    "diagnostic.floatConfig": {
        "border" : true,
        "rounded" : true,
        "borderhighlight" : "Keyword"
    },
    "suggest.floatConfig": {
        "border" : true,
        "rounded" : true,
        "borderhighlight" : "Keyword"
    },
    "signature.floatConfig": {
        "border" : true,
        "rounded" : true,
        "borderhighlight" : "Keyword"
    },
    "hover.floatConfig": {
        "border" : true,
        "rounded" : true,
        "borderhighlight" : "Keyword"
    },

    "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        ".stack.yaml",
        ".hie-bios",
        "BUILD.bazel",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ]
    },
    "ocaml-lsp": {
        "command": "opam",
        "args": ["config", "exec", "--", "ocamllsp"],
        "filetypes": ["ocaml", "reason"]
    }
  },
  "clangd.inlayHints.enable" : false
}

