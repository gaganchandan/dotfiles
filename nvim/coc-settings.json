{
    "isabelle.enable" : true, 
    "isabelle.command" : "isabelle",
    "isabelle.usePideExtensions" : false,
    "isabelle.debug" : true,
    "isabelle.useHtmlOutput" : true,
    "diagnostic.checkCurrentLine": true,
    "diagnostic.refreshOnInsertMode": true,
    "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        ".stack.yaml",
        ".hie-bios",
        "BUILD.bazel",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ]
    }
  }
}

